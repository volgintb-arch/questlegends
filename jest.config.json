{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/lib", "<rootDir>/tests"],
  "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": ["lib/**/*.ts", "!lib/**/*.test.ts", "!lib/**/*.d.ts"],
  "coverageThreshold": {
    "global": {
      "branches": 85,
      "functions": 85,
      "lines": 85,
      "statements": 85
    }
  }
}
