{
  "info": {
    "name": "QuestLegends OS 2.0 API",
    "description": "Complete API collection for QuestLegends franchise management system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://api.questlegends.com/v2"
    },
    {
      "key": "accessToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"franchisee1@example.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/refresh",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Deals",
      "item": [
        {
          "name": "Get All Deals",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/deals?page=1&limit=50",
              "query": [
                { "key": "locationId", "value": "" },
                { "key": "stage", "value": "" },
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "50" }
              ]
            }
          }
        },
        {
          "name": "Update Deal Stage",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/deals/:id/stage",
            "header": [
              {
                "key": "Idempotency-Key",
                "value": "{{$guid}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"stage\": \"Игра проведена\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Analytics",
      "item": [
        {
          "name": "Get P&L",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/analytics/pnl?startDate=2025-01-01&endDate=2025-01-31",
              "query": [
                { "key": "locationId", "value": "" },
                { "key": "startDate", "value": "2025-01-01" },
                { "key": "endDate", "value": "2025-01-31" }
              ]
            }
          }
        }
      ]
    }
  ]
}
